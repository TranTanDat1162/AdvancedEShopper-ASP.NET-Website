<div class="col-lg-3 col-md-6 col-sm-12 pb-1">
    <div class="card product-item border-0 mb-4">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
            <img class="img-fluid w-100" src="@Model.ProductPhoto" alt="">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">Colorful Stylish Shirt</h6>
            <div class="d-flex justify-content-center">
                @if (@Model.ProductDiscount == 0)
                {
                    <h6>$@Model.ProductPrice</h6>

                    <h6 class="text-muted ml-2"></h6>
                }
                else
                {
                    <h6>$@Model.ProductPrice</h6>

                    <h6 class="text-muted ml-2"><del>$@Math.Round((Model.ProductPrice ?? 0) / (Model.ProductDiscount ?? 1), 2)</del></h6>
                }
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            <a href="/Products/Details/?id=@Model.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
            <a href="/Cart/AddToCart/?productId=@Model.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
        </div>
    </div>
</div>